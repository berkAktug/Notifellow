<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/schedule_row"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/rowbg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/joinUserLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/joinProfilePic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_profile"
                    />

                <TextView
                    android:id="@+id/joinUsernameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username Comes Here."
                    android:textSize="12sp"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                >

                <LinearLayout
                    android:id="@+id/joinTitleLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    >

                    <ImageView
                        android:id="@+id/joinTitleImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_reminder"
                        android:tint="@color/colorBlue"

                        />
                    <TextView
                        android:id="@+id/joinTitleTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlue"
                        android:textStyle="bold"
                        android:text="Here comes our Event title, to make it more then one row in order to see if layout gets fucked up, im bullshitting right now. As I thought, it works fine."
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/joinDateLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    >

                    <ImageView
                        android:id="@+id/joinDateImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock"
                        android:tint="@color/colorBlue"

                        />
                    <LinearLayout
                        android:id="@+id/joinDateTxtLay"
                        android:layout_width="match_parent"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/joinDateStartLay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/joinDateStartsAt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlue"
                                android:text="Starts At:"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/joinDateStartsAtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/colorBlue"
                                android:textSize="12sp"
                                android:text="Starting date comes here"
                                />



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/joinDateEndLay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/joinDateEndsAt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlue"
                                android:textSize="12sp"
                                android:text="Ends At:"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/joinDateEndsAtTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlue"
                                android:layout_marginStart="8dp"
                                android:textSize="12sp"
                                android:text="Ending date comes here"
                                />



                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@color/colorBlue"
            android:padding="0dp"
            />


        <LinearLayout
            android:id="@+id/joinActionLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/joinAcceptBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_check"
                android:tint="@color/colorbtnfeed"
                />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:src="@color/colorBlue"
                android:padding="0dp"
                />

            <ImageView
                android:id="@+id/joinDeclineBtn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_close"
                android:tint="@color/colorbtnfeed"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
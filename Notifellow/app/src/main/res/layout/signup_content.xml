<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:foregroundGravity="center"
        card_view:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp">

            <EditText
                android:id="@+id/usernameSignUp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorBlue"
                android:hint="Enter a Username."
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/usernameSignUp"
                android:layout_below="@id/usernameSignUp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorBlue"
                android:hint="Enter Your Email."
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailSignUp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/emailSignUp"
                android:inputType="textPassword"
                android:backgroundTint="@color/colorBlue"
                android:hint="Enter a Password."
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordRepeatSignUp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordSignUp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textPassword"
                android:layout_toStartOf="@+id/passwordSignUp"
                android:backgroundTint="@color/colorBlue"
                android:hint="Repeat Your Password."
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/passwordRepeatSignUp"
                android:layout_below="@id/passwordRepeatSignUp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonbg"
                android:elevation="0dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSignUpSignIn"
                style="?attr/borderlessButtonStyle"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/btnSignUp"
                android:layout_below="@+id/btnSignUp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:elevation="0dp"
                android:text="Already Have an Account?"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="15sp" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
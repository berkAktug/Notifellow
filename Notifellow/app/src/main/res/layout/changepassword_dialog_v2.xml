<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/changepwTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/colorBlue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/oldpw"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/newpw"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Your New Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/repeatnewpw"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Repeat Your New Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />

        <LinearLayout
            android:layout_below="@+id/changepwButtons"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_savePW"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Ok"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:background="@drawable/buttonbg"
                android:textColor="@color/colorBlue"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cancelPW"
                android:layout_width="0dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:background="@drawable/buttonbg_gray"
                android:textColor="@color/colorGray"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
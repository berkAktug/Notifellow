<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crdForgotPassEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:clickable="false"
        card_view:cardCornerRadius="30dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/crdForgotPassTitle"
        card_view:layout_constraintVertical_bias="0.05">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp">

            <EditText
                android:id="@+id/emailForPW"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorBlue"
                android:hint="Enter Your Email."
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSendEmail"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/emailForPW"
                android:layout_below="@id/emailForPW"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonbg"
                android:elevation="0dp"
                android:text="Send Email"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnGotoSignIn"
                style="?attr/borderlessButtonStyle"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/btnSendEmail"
                android:layout_below="@id/btnSendEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:elevation="0dp"
                android:text="Already Have an Account?"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="15sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
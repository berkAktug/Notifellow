<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/row_comment"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"

    >

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rowbg"
        android:orientation="horizontal"
        >


            <ImageView
                android:id="@+id/rowCommentProfilePicture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="center_vertical"
                />

        <LinearLayout
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rowCommentUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="usernamecomeshere"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/rowCommentCommentTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here is a comment, lets see if it gets more bigger than one row."
                android:textSize="14sp"
                />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>
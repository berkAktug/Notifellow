<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:clickable="false"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notes"
                android:tint="@color/colorBlue"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/imgTitle"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/noteTitle"
                android:id="@+id/lineTitle"
                android:background="@drawable/line_drawable"
                />


            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@id/imgTitle"
                android:text="New Note"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/noteTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/imgTitle"
                android:layout_below="@+id/lineTitle"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/colorGray"
                android:hint="Enter your title here."
                android:inputType="textMultiLine"
                android:maxEms="300"
                android:textColor="@color/colorGray"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/noteTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/imgTitle"
                android:layout_below="@+id/noteTitleTxt"
                android:layout_marginBottom="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/colorGray"
                android:hint="Description of your beautiful note goes here."
                android:inputType="textMultiLine"
                android:maxEms="300"
                android:textColor="@color/colorGray"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/NoteImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@id/imgTitle"
                android:layout_below="@+id/noteTxt"
                android:layout_marginBottom="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorGray"
                android:maxEms="300"
                android:textColor="@color/colorGray" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
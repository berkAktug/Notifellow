<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="false"
        android:layout_gravity="center"
        card_view:cardCornerRadius="30dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_wifi"
                android:tint="@color/colorBlue"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/imgwifi"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/remWiFi"
                android:id="@+id/lineWifi"
                android:background="@drawable/line_drawable"
                />

            <TextView
                android:id="@+id/remWiFi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgwifi"
                android:layout_alignTop="@id/imgwifi"
                android:layout_marginBottom="8dp"
                android:text="Wi-Fi"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/RefreshBtn"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/remWiFi"
                android:layout_alignEnd="@+id/spinnerWiFi"
                android:background="@drawable/buttonbg"
                android:text="Refresh"
                android:textColor="@color/colorBlue"
                android:textSize="10sp"
                android:textStyle="bold" />



            <Spinner
                android:id="@+id/spinnerWiFi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lineWifi"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="28dp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorGray"
                android:backgroundTint="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>